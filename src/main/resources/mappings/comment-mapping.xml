<mapper namespace="comment">

	
	<insert id="writeComment">
		INSERT INTO commentList (pno, id, ccomment, cdatetime)
		VALUES(#{pno}, #{id}, #{ccomment}, sysdate())	
	</insert>
	
	<select id="commentList">
		SELECT * FROM commentList;
	</select>
	
